<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/titleLayer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titleName"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/shape1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:padding="5dp"
        android:orientation="horizontal">

        <TextView
            android:text="@string/titleTime"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtSumTimes"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ems="10"
            android:gravity="end"/>

        <TextView
            android:text="@string/labelHour"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="end"/>

        <TextView
            android:text="@string/titleAmount"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtSumAmount"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:gravity="end"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:text="@string/labelWon"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="end" />

    </GridLayout>

    <View
        android:id="@+id/shape2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/shape3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDaily"
            android:layout_column="0"
            android:layout_row="0"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_columnSpan="3" />

        <TextView
            android:text="@string/dailyTitleTime"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/txtDailyTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:ems="10"
            android:inputType="number"
            android:gravity="end" />

        <TextView
            android:text="@string/labelHour"
            android:layout_column="2"
            android:layout_row="1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <TextView
            android:text="@string/dailyTitleAmount"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/txtDailyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:ems="10"
            android:inputType="number"
            android:gravity="end" />

        <TextView
            android:text="@string/labelWon"
            android:layout_column="2"
            android:layout_row="2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

    </GridLayout>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/buttonSave"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="end" />

</LinearLayout>